
$links     = #08c
$bgcolor   = #fefefe

if dark($bgcolor)
  $icons = lighten($bgcolor, 15%)
else
  $icons = darken($bgcolor, 15%)  

$type      = invert($bgcolor)

a 
  color: $links;

i{
  text-shadow: 0px 1px 0px invert(rgba($icons, .3));
}

hr

  background-color: $icons;
  border: 0;
  height: 1px;

p
  color: $type;

body 
  background-color: $bgcolor;
  padding-bottom: 60px;
  color: $type;

h1
  margin: 60px 0;
  font-size: 60px;
  line-height: 50px;

  &:hover

    i

      color: $link

  i
    color: $icons;
    font-size 100pt;
    line-height: 14px;

  .highlight 
    color: $links;
  

h2, h3 
  font-weight: normal;

h2 
  margin: 20px 0 10px 0;

  i

    color: $icons;
    margin: 7px 15px 0 0;

a 
  text-decoration: underline;

.well
  background: none;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  position: relative;
  border-color: darken($bgcolor, 15%);
  box-shadow: 0px 1px 0px invert(rgba($bgcolor, .3)), inset 0px 1px 0px rgba($bgcolor, .3);

.who-what-when-where 
  margin-top: 0px;


// sidebar
.sidebar 
  margin-top: 60px;
  position: fixed;

  h3
    background: $type;
    color: $bgcolor;
    padding: 5px 10px;
    border-radius: 2px;

    i
      color: lighten($bgcolor, 15%);
      margin: 5px 10px 0 0;

  .members
    margin-top: 10px;

  .members li 
    margin-top: 0px;
    display: block;
    padding: 5px 10px;
    border-bottom: 1px solid $icons; 

    a 
      color: $type;
    
    .gravatar 
      width: 16px;
      height: 16px;
      margin-top: -5px;
      margin-right: 5px;
      -webkit-border-radius: 3px;
      -moz-border-radius: 3px;
      border-radius: 3px;

  div

    padding: 5px 0;

    i
      color: $icons;
      text-decoration: none;
      margin: 2px 5px;


.event-data
  margin: -15px;
  border-radius: 4px;
  padding: 5px;
  background-color: rgba($bgcolor, .8);
  display: inline-block;


.rsvp-yes
  position: absolute;
  bottom: 10px;
  right: 10px;
  height: 25px;
  text-align: center;
  line-height: 25px;
  background-color: $type;
  box-shadow: 0px 1px 1px $type;
  color: $bgcolor;
  border-radius: 25px;
  padding: 0 10px;

  i

     margin: 2px 5px 0 0;
   


  
  

// mobile phones dont like sticky stuff
@media (max-width: 767px)

  .container

    width: 75%;

  .sidebar
    position: relative;
    margin-top: 10px;

    h3
      line-height: 36px;
      font-size: 24px;
      background: transparent;
      color: $type;
      padding: 0;

      i
        color: $icons;
        margin: 7px 15px 0 0;


    .members li
      float: left;
      padding: 2px;

      span
        display: none;

    div
      clear:both;
      display: block;

      i
        color: $type;

@media (max-width: 480px)

  h1
    font-size: 50px;

  .container

    width: 90%;

  .rsvp-yes

    span.going

      display: none;



