body {
  background-color: #fdfdfd;
}

h1 {
  margin: 120px 0 60px 0;
  font-size: 60px;
  span {
    color: #bada55;
  }
}
h2, h3 {
  font-weight: normal;
}

h2 {
  margin: 20px 0 10px 0;
}
a {
  text-decoration: underline;
}
.well {
  background: none;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  position: relative;
}
.who-what-when-where {
  margin-top: 0px;
}

// sidebar
.sidebar {
  margin-top: 10px;
}
.members li {
  margin-top: 5px;
  display: block;
  a {
    color: #333;
  }
  .gravatar {
    margin-top: -5px;
    margin-right: 5px;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
  }
}

.event-data{
  margin: -15px;
  border-radius: 4px;
  padding: 5px;
  background-color: rgba(255,255,255,.8);
  display: inline-block;
}

.rsvp-yes{
  position: absolute;
  bottom: 10px;
  right: 10px;
  height: 25px;
  text-align: center;
  line-height: 25px;
  background-color: rgb(255,255,255);
  box-shadow: 0px 1px 1px rgba(0,0,0,.3);
  border-radius: 25px;
  padding: 0 20px;
}

.sidebar{
  position: fixed;
}